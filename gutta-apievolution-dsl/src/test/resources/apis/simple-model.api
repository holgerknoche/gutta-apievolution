api test.customer {

	record Address {
		string street
		string number
		numeric(5) postalCode
		string city
	}

    enum Gender {
        MALE
        FEMALE
        THIRD
    }

	record Customer {
		string firstName
		string lastName
		Gender gender
		Address address
	}

    record FormattedAddress {
        string address
    }

	// Save customer to database
	operation save(Customer) : Customer

	// Format address
	operation formatAddress(Address) : FormattedAddress

}