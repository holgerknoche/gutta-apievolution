api test.customer {

	record Address {
		string street
		string number
		numeric(5) postalCode
		string city
	}

    enum Gender {
        MALE
        FEMALE
        THIRD
    }

	record Customer {
		string firstName
		string lastName
		Gender gender
		Address address
	}

	exception FormattingException {
	    int32 errorCode
	}

    record FormattedAddress {
        string address
    }

	service CustomerService {
		// Save customer to database
		Customer save(Customer)

		// Format address
		FormattedAddress formatAddress(Address) throws FormattingException
	}

}